{
	"name": "workflow-versioning-poc-tanstack-start",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "dotenv -e .env -- vite dev",
		"dev:full": "pnpm run db:up && wait-on tcp:5432 && concurrently -k -n DEV,STUDIO -c green,blue \"pnpm dev\" \"pnpm db:studio\"",
		"dev:testing": "dotenv -e .env.testing pnpm dev",
		"dev:production": "dotenv -e .env.production pnpm dev",
		"build": "drizzle-kit migrate && vite build",
		"start": "node .output/server/index.mjs",
		"test": "vitest",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"db:seed": "dotenv -e .env -- tsx src/db/seed.ts",
		"db:up": "docker compose up -d postgres",
		"db:down": "docker compose down postgres",
		"db:migrate:testing": "dotenv -e .env.testing pnpm drizzle-kit migrate",
		"db:studio:testing": "dotenv -e .env.testing pnpm drizzle-kit studio",
		"db:migrate:production": "dotenv -e .env.production pnpm drizzle-kit migrate",
		"db:studio:production": "dotenv -e .env.production pnpm drizzle-kit studio",
		"check": "biome check --write",
		"format": "biome format --write",
		"lint": "biome lint --write"
	},
	"dependencies": {
		"@netlify/vite-plugin-tanstack-start": "^1.0.1",
		"@radix-ui/react-checkbox": "^1.3.3",
		"@radix-ui/react-dialog": "^1.1.15",
		"@radix-ui/react-label": "^2.1.7",
		"@radix-ui/react-select": "^2.2.6",
		"@radix-ui/react-slot": "^1.2.3",
		"@tailwindcss/vite": "^4.1.13",
		"@tanstack/devtools-vite": "^0.3.3",
		"@tanstack/react-devtools": "^0.7.0",
		"@tanstack/react-form": "^1.23.4",
		"@tanstack/react-form-devtools": "^0.1.4",
		"@tanstack/react-query": "^5.90.2",
		"@tanstack/react-query-devtools": "^5.90.2",
		"@tanstack/react-router": "^1.132.21",
		"@tanstack/react-router-devtools": "^1.132.21",
		"@tanstack/react-router-ssr-query": "^1.132.21",
		"@tanstack/react-start": "^1.132.21",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"concurrently": "^9.2.1",
		"drizzle-orm": "^0.44.5",
		"drizzle-seed": "^0.3.1",
		"drizzle-zod": "^0.8.3",
		"fast-json-patch": "^3.1.1",
		"lucide-react": "^0.544.0",
		"motion": "^12.23.22",
		"pg": "^8.16.3",
		"pino": "^9.12.0",
		"pino-pretty": "^13.1.1",
		"postcss": "^8.5.6",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"sonner": "^2.0.7",
		"tailwind-merge": "^3.3.1",
		"tailwindcss": "^4.1.13",
		"tw-animate-css": "^1.4.0",
		"vite": "^7.1.7",
		"xstate": "^5.22.0",
		"zod": "4.1.11"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"@electric-sql/pglite": "^0.3.10",
		"@testcontainers/postgresql": "^11.6.0",
		"@types/pg": "^8.15.5",
		"@types/react": "^19.1.15",
		"@types/react-dom": "^19.1.9",
		"@vitejs/plugin-react": "^5.0.4",
		"cross-env": "^10.0.0",
		"dotenv-cli": "^10.0.0",
		"drizzle-kit": "^0.31.5",
		"tsx": "^4.20.6",
		"typescript": "^5.9.2",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.2.4",
		"wait-on": "^9.0.1"
	}
}
