{
	"name": "workflow-versioning-poc-tanstack-start",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev --port 3000",
		"dev:full": "pnpm run db:up && wait-on tcp:5432 && concurrently -k -n DEV,STUDIO -c green,blue \"pnpm dev\" \"pnpm db:studio\"",
		"dev:testing": "dotenv -e .env.testing pnpm dev",
		"dev:production": "dotenv -e .env.production pnpm dev",
		"build": "drizzle-kit migrate && vite build",
		"start": "node .output/server/index.mjs",
		"test": "vitest",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"db:seed": "dotenv -e .env -- tsx src/db/seed.ts",
		"db:up": "docker compose up -d postgres",
		"db:down": "docker compose down postgres",
		"db:migrate:testing": "dotenv -e .env.testing pnpm drizzle-kit migrate",
		"db:studio:testing": "dotenv -e .env.testing pnpm drizzle-kit studio",
		"db:migrate:production": "dotenv -e .env.production pnpm drizzle-kit migrate",
		"db:studio:production": "dotenv -e .env.production pnpm drizzle-kit studio",
		"check": "biome check --write",
		"format": "biome format --write",
		"lint": "biome lint --write"
	},
	"dependencies": {
		"@radix-ui/react-checkbox": "^1.3.2",
		"@radix-ui/react-dialog": "^1.1.15",
		"@radix-ui/react-label": "^2.1.7",
		"@radix-ui/react-select": "^2.2.5",
		"@radix-ui/react-slot": "^1.2.3",
		"@t3-oss/env-core": "^0.13.8",
		"@tailwindcss/vite": "^4.1.11",
		"@tanstack/react-form": "^1.12.4",
		"@tanstack/react-query": "^5.81.5",
		"@tanstack/react-query-devtools": "^5.81.5",
		"@tanstack/react-router": "^1.124.0",
		"@tanstack/react-router-devtools": "^1.124.0",
		"@tanstack/react-router-with-query": "^1.124.0",
		"@tanstack/react-start": "^1.124.1",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"concurrently": "^9.2.0",
		"drizzle-orm": "^0.44.2",
		"drizzle-seed": "^0.3.1",
		"drizzle-zod": "^0.8.2",
		"fast-json-patch": "^3.1.1",
		"lucide-react": "^0.525.0",
		"motion": "^12.23.12",
		"pg": "^8.16.3",
		"pino": "^9.7.0",
		"pino-pretty": "^13.0.0",
		"postcss": "^8.5.6",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"sonner": "^2.0.5",
		"tailwind-merge": "^3.3.1",
		"tailwindcss": "^4.1.11",
		"tw-animate-css": "^1.3.4",
		"vite": "^7.0.1",
		"xstate": "^5.20.0",
		"zod": "4.0.17"
	},
	"devDependencies": {
		"@biomejs/biome": "2.0.6",
		"@electric-sql/pglite": "^0.3.4",
		"@testcontainers/postgresql": "^11.6.0",
		"@types/pg": "^8.15.4",
		"@types/react": "^19.1.8",
		"@types/react-dom": "^19.1.6",
		"@vitejs/plugin-react": "^4.6.0",
		"cross-env": "^7.0.3",
		"dotenv-cli": "^9.0.0",
		"drizzle-kit": "^0.31.4",
		"tsx": "^4.20.3",
		"typescript": "^5.8.3",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.2.4",
		"wait-on": "^8.0.3"
	}
}
